<div class="main users-new">
<div class="container">
<div class="form-heading">Sign up</div>
<div class="form users-form">
<div class="form-body">


<% @user.errors.full_messages.each do |message| %>
<div class="form-error">
<%= message %>
</div>
<% end %>

<%= form_tag("/users/create") do %>

<p>Name</p>
<input name="name" valu="<%= @user.name %>">

